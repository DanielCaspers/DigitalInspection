@model DigitalInspection.ViewModels.EditTagViewModel
@{
	Layout = "~/Views/Shared/_Layout.cshtml";
	ViewBag.Title = "Digital Inspection";
}

@using (Html.BeginForm(
					"Update",
					"Tags",
					new { id = Model.Tag.Id },
					FormMethod.Post,
					new
					{
						id = "editTagForm",
						autocomplete = "off"
					}
				)
		)
{
	<div class="container-fluid">
		<div class="jumbotron">
			<fieldset>
				<div class="form-group">
					@Html.LabelFor(m => m.Tag.Name, new { @class = "control-label" })
					@Html.TextBoxFor(m => m.Tag.Name, new { @class = "form-control" })
					@Html.ValidationMessageFor(m => m.Tag.Name)
				</div>
			</fieldset>
		</div>
	</div>
}

@section Toolbar {
	<div class="row">
		<a href="@Url.Action("Index", "Tags")"
		   class="btn btn-default back-button no-margin pull-left">
			<i class="material-icons">arrow_back</i>
			@Model.Tag.Name
		</a>
		<!-- Requires use of jQuery for submission because this is defined outside the form -->
		<button onclick="$('#editTagForm').submit()"
				class="btn btn-default no-margin pull-right">
			<i class="material-icons">save</i>
		</button>
	</div>
}