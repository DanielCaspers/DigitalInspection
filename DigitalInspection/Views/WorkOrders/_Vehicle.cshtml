						@Html.TextBoxFor(m => m.WorkOrder.Vehicle.Model, new { @class = "form-control", @disabled = "disabled" })
						@Html.ValidationMessageFor(m => m.WorkOrder.Vehicle.Model)
					</div>
				</div>

				<div class="row">
