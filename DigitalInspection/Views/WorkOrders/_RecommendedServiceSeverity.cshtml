@model RecommendedService
@using DigitalInspection.Models.Orders

@switch (Model.Severity)
{
	case RecommendedServiceSeverity.IMMEDIATE:
		<i class="material-icons" style="color:red">warning</i>
		break;
	case RecommendedServiceSeverity.MODERATE:
		<i class="material-icons" style="color:orange">alarm</i>
		break;
	case RecommendedServiceSeverity.SHOULD_WATCH:
		<i class="material-icons" style="color:#888">remove_red_eye</i>
		break;
	case RecommendedServiceSeverity.MAINTENANCE:
		<i class="material-icons" style="color:mediumblue">date_range</i>
		break;
	case RecommendedServiceSeverity.NOTES:
		<i class="material-icons" style="color:black">description</i>
		break;
}
