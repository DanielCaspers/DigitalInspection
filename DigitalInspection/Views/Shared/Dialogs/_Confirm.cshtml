@model DigitalInspection.ViewModels.ConfirmDialogViewModel

<div id="confirmDialog" class="modal fade">
	<div class="modal-dialog modal-sm">
		<div class="modal-content">
			<div class="modal-header">
				<button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
				<h4 class="modal-title">@Model.Title</h4>
			</div>
			<div class="modal-body">
				<p>@Model.Body</p>
			</div>
			<div class="modal-footer">
				<button id="confirmDialog_cancel" type="button" class="btn btn-default" data-dismiss="modal">@Model.CancelActionText</button>
				<button id="confirmDialog_success" type="button" class="btn btn-primary" data-dismiss="modal">@Model.AffirmativeActionText</button>
			</div>
		</div>
	</div>
</div>