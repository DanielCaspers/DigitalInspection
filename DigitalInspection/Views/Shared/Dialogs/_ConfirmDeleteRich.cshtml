<div id="confirmDelete" class="modal fade">
	<div class="modal-dialog modal-sm">
		<div class="modal-content">
			<div class="modal-header">
				<button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
				<h4 class="modal-title">Delete @Model</h4>
			</div>
			<div class="modal-body">
				<p>This cannot be undone!</p>
			</div>
			<div class="modal-footer">
				<button id="confirmDelete_cancel" type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
				<button id="confirmDelete_success" type="button" class="btn btn-primary" data-dismiss="modal">Delete</button>
			</div>
		</div>
	</div>
</div>